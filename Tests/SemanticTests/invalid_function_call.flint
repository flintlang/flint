contract Test {
  var owner: Address
}

Test :: caller <- (any) {
  public init() {
    self.owner = caller
  }

  public func foo() {

    bar() // expected-error {{Function 'bar' is not in scope or cannot be called using the caller capability 'any'}}
  }
}

Test :: (owner) {
  func bar() {
  }
}
